<table>
<% book.book_comments.each do |book_comment| %>
 <tr>
  <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></td>
   <td><%= book_comment.user.name %></td>
     <td><%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %></td>
  <% if book_comment.user == current_user %>
       <td><%= link_to "Dstroy", book_book_comment_path(book.id,book_comment.id), method: :delete, remote: true  %></td>
  <% end %>

 </tr>
<% end %>
</table>